pcm.micladspa
{
    type ladspa
    slave.pcm "default";
    path "/usr/lib64/ladspa";
    plugins 
    [
        {
            label gate
            input
            {
                controls [ 400 4000 -40 30 1500 1000 -90 0]
            }
        }
        {
            label lpf
            input 
            {
                controls [ 200000 ]
            }
        }
        {
            label hpf
            input 
            {
                controls [ 60 ]
            }
        }
        {
            label dysonCompress
            input
            {
                #peak limit, release time, fast ratio, ratio
                controls [ 0 1 0.5 0.99 ]
            }
        }
        {
            label fastLookaheadLimiter
            input 
            {
                #InputGain(Db) -20 -> +10 ; Limit (db) -20 -> 0 ; Release time (s) 0.01 -> 2
                controls [ 10 0 0.8  ]
            }
        }
    ]
}

pcm.micfilter {
    type plug
    slave.pcm "micladspa";
    hint
    {
        show on
        description "for prettying up mic input"
    }
}

### alsa -> jack bridge stuff

# playback PCM device: using loopback subdevice 0,0
pcm.amix {
  type dmix
  ipc_key 219345
  slave.pcm "hw:Loopback,0,0"
    slave
    {
        period_time 0
        period_size 512
        buffer_size 2048
        periods 2
        rate 44100
        format S32_LE
        channels 2
    }
    bindings
    {
        0 0
        1 1
    }
}

# capture PCM device: using loopback subdevice 0,1
pcm.asnoop {
  type dsnoop
  ipc_key 219346
  slave.pcm "hw:Loopback,0,1"
    slave 
    {
        period_time 0
        period_size 1024
        buffer_size 4096
        rate 44100
        format S32_LE
        channels 2 
    }
    bindings 
    {
        0 0
        1 1
    }
}

# duplex device combining our PCM devices defined above
pcm.aduplex {
  type asym
  playback.pcm "amix"
  capture.pcm "asnoop"
}

# ------------------------------------------------------
# for jack alsa_in and alsa_out: looped-back signal at other ends
pcm.ploop {
  type plug
  slave.pcm "hw:Loopback,1,1"
}

pcm.cloop {
  type dsnoop
  ipc_key 219348
  slave.pcm "hw:Loopback,1,0"
}

# ------------------------------------------------------
# default device

pcm.!default {
  type plug
  slave.pcm "aduplex"
}
