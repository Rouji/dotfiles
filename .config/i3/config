client.unfocused        #000000 #000000 #ffffff #000000
client.focused_inactive #000000 #000000 #ffffff #000000
#client.urgent           $col_indicate $col_indicate $col_font #ffffff

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	position top
#        status_command i3status
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        font pango: xos4 Terminus 8
        tray_output primary

        colors {
		background #000000
	    	separator #757575
		#                  border background text
		focused_workspace  #000000 #000000 #ffffff
		inactive_workspace #000000 #000000 #a0a0a0
		urgent_workspace   #000000 #000000 #ff0000
	}
}

