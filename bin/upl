#!/bin/bash
HOST='https://x0.at/'
RESP=$(curl -X POST \
    --progress-bar \
    -F "file=@$@" \
    $HOST)

RESP=$(echo $RESP | tr -d '\n' | tr -d '\r')

echo $RESP

echo -n "$RESP" | xclip -selection clipboard
echo -n "$RESP" | xclip -selection primary
echo -n "$RESP" | wl-copy

notify-send 'upload' "$RESP"
